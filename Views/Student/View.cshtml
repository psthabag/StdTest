@model IEnumerable<StdTest.Models.Students>
<h2>Student Details</h2>
@foreach(var student in Model)
{
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@student.Name" disabled />
        </div><br />
        <div class="form-group">
            <label for="lName">Last Name</label>
            <input type="text" class="form-control" id="lName" name="lName" value="@student.lName" disabled />
        </div><br />
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" value="@student.Address" disabled />
        </div><br />
        <div class="form-group">
            <label for="Mobile">Mobile</label>
            <input type="text" class="form-control" id="Mobile" name="Mobile" value="@student.Mobile" disabled />
        </div><br />
    <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i>&nbsp;Edit</a>
}